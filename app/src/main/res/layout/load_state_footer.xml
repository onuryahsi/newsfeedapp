<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/footer_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/footer_error_desc"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_below="@id/footer_progress_bar"
        android:text="Result could not be loaded" />

    <Button
        android:id="@+id/footer_retry"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/footer_error_desc"
        android:text="Retry" />
</LinearLayout>